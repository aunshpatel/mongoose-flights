<%- include('../partials/header') %>
<form id="new-form" action="/flights" method="POST">
    <label>Airline Name:</label>
    <select name="airline">
      <option value="Air India">Air India</option>
      <option value="Etihad">Etihad</option>
      <option value="Emirates">Emirates</option>
      <option value="Qatar">Qatar</option>
    </select>
    <label>Flight Number:</label>
    <input type="text" name="flightNo">
    <label>Airport</label>
    <select name="airport">
      <option value="EWR">Newark International Airport, New Jersey, USA (EWR)</option>
      <option value="IAD">Dulles International Airport, Virginia, USA(IAD)</option>
      <option value="AMD">Ahmedabad International Airport, Gujarat, India(AMD)</option>
      <option value="BOM">Mumbai International Airport, Maharashtra, India(BOM)</option>
      <option value="IGI">New Delhi International Airport, New Delhi, India(IGI)</option>
    </select>

    <label>Departs at:</label>
    <input type="datetime-local" name="departs"> 
    
    <input type="submit" value="Add Flight">
  </form>

<%- include('../partials/footer') %>