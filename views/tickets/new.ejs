<%- include('../partials/header') %>

<div>Before adding, please ensure that the Ticket is not in the following list:</div>
<section id="badge-container">
    <% tickets.forEach(function(p) { %>
      <article class="badge"><%= p.seat %></article>
    <% }) %>
  </section>
  
  <form id="add-ticket-form" action="/tickets" method="POST">
    <label>Seat:</label>
    <input type="text" name="seat" required pattern="[A-F][1-9]\d?">
    <label>Price:</label>
    <input type="price" name="price" required>
    <!-- <label>Flight:</label>
    <select name="airline">
    <%- tickets.map(p => 
    `<option value="${p._id}">${p.airline}</option>`
    ).join('') %> -->
    
    <input type="submit" value="Add Ticket">
  </form>

<%- include('../partials/footer') %>